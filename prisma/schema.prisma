// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(cuid())
  email         String        @unique
  password      String
  username      String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  userProblems  UserProblem[]
}

model Problem {
  id            String        @id @default(cuid())
  title         String
  leetcodeId    Int?          @unique // LeetCode problem number
  difficulty    String        // Easy, Medium, Hard
  category      String?       // e.g., Array, String, Dynamic Programming
  tags          String[]      // Array of tags
  description   String?       @db.Text
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  userProblems  UserProblem[]
}

model UserProblem {
  id            String        @id @default(cuid())
  userId        String
  problemId     String
  status        String        @default("not_started") // not_started, in_progress, solved
  timeSpent     Int?          // Time in minutes
  notes         String?       @db.Text
  solvedAt      DateTime?
  needsReview   Boolean       @default(false) // For "Attention" column
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  problem       Problem       @relation(fields: [problemId], references: [id], onDelete: Cascade)
  
  @@unique([userId, problemId]) // A user can only have one entry per problem
  @@index([userId])
  @@index([problemId])
}