// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String        @id @db.Uuid // Matches Supabase auth.users.id
  email         String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  userProblems  UserProblem[]
}

model Problem {
  id            String        @id @default(cuid())
  title         String
  slug          String?       // LeetCode URL slug (e.g., "two-sum")
  leetcodeId    Int?          @unique // LeetCode problem number
  difficulty    String        // Easy, Medium, Hard
  category      String?       // e.g., Array, String, Dynamic Programming
  tags          String[]      // Array of tags
  description   String?       @db.Text
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  userProblems  UserProblem[]
}

model UserProblem {
  id            String        @id @default(cuid())
  userId        String        @db.Uuid
  problemId     String
  status        String        @default("not_started") // not_started, in_progress, solved
  timeSpent     Int?          // Time in seconds (best non-expired solve time, auto-updated from logs)
  solvedAt      DateTime?     // First time this problem was solved
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  problem       Problem       @relation(fields: [problemId], references: [id], onDelete: Cascade)
  logs          Log[]

  @@unique([userId, problemId])
  @@index([userId])
  @@index([problemId])
}

model Log {
  id            String        @id @default(cuid())
  userProblemId String
  timeSpent     Int           // Time in seconds for this session
  solution      String?       @db.Text // Code/solution
  notes         String?       @db.Text // Notes for this session
  status        String?       // "solved", "attempted", "reviewed", etc.
  expiresAt     DateTime?     // Log expires 1 month after creation (set in application code, nullable for old logs)
  createdAt     DateTime      @default(now())
  
  userProblem   UserProblem   @relation(fields: [userProblemId], references: [id], onDelete: Cascade)
  
  @@index([userProblemId])
  @@index([createdAt])
  @@index([expiresAt])
}